<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Estilo para o cabeçalho do grid -->
    <Style x:Key="GridHeaderStyle" TargetType="Grid">
        <Setter Property="Background" Value="{StaticResource Cinza11}"/>
        <Setter Property="CornerRadius" Value="4,4,0,0"/>
        <Setter Property="Height" Value="48"/>
    </Style>

    <!-- Estilo para os textos do cabeçalho -->
    <Style x:Key="GridHeaderTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource Cinza2}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Padding" Value="0"/>
    </Style>

    <!-- Estilo para containers do cabeçalho -->
    <Style x:Key="GridHeaderBorderStyle" TargetType="Border">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>

    <!-- Estilo para StackPanels do cabeçalho -->
    <Style x:Key="GridHeaderStackPanelStyle" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="Spacing" Value="2"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <!-- Estilo para as linhas do grid -->
    <Style x:Key="GridRowStyle" TargetType="Grid">
        <Setter Property="Margin" Value="0"/>
        <Setter Property="ColumnSpacing" Value="0"/>
        <Setter Property="Background" Value="{StaticResource Transparente}"/>
    </Style>

    <!-- Estilo para células das linhas -->
    <Style x:Key="GridRowCellStyle" TargetType="Border">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Background" Value="{StaticResource Transparente}"/>
    </Style>

    <!-- Estilo para textos das linhas -->
    <Style x:Key="GridRowTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Padding" Value="0"/>
    </Style>

    <!-- Estilo específico para texto de FormaPagamento -->
    <Style x:Key="GridRowFormaPagamentoTextStyle" 
           BasedOn="{StaticResource GridRowTextStyle}" 
           TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource Cinza2}"/>
        <Setter Property="Padding" Value="18,0,0,0"/>
    </Style>

    <!-- Estilo específico para texto de TipoTransacao -->
    <Style x:Key="GridRowTipoTransacaoTextStyle" 
           BasedOn="{StaticResource GridRowTextStyle}" 
           TargetType="TextBlock">
        <Setter Property="Padding" Value="12,0,0,0"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <!-- Estilo para ícones das linhas -->
    <Style x:Key="GridRowIconStyle" TargetType="FontIcon">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="CompactListViewItemStyle" TargetType="ListViewItem">
        <Setter Property="Background" Value="{StaticResource Cinza8}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="MinHeight" Value="0"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
    </Style>

    <!-- Estilo para o cabeçalho do grid -->
    <Style x:Key="GridHeaderIconStyle" TargetType="FontIcon">
        <Setter Property="Foreground" Value="{StaticResource Cinza1}"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

</ResourceDictionary>